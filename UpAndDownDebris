using UnityEngine;
using System.Collections;
public class DebrisY : MonoBehaviour
//This makes the debris move up and down
//Struggling to find out how to set coordinates to make the floats stop 
//Still need to add trigger to the gravity and stuff 8)

{
    public Transform farEnd;
    private Vector3 frometh;
    private Vector3 untoeth;
    private float secondsForOneLength = 20f;

    void Start()
    {
        frometh = transform.position;
        untoeth = farEnd.position;
    }

    void Update()
    {
        transform.position = Vector3.Lerp(frometh, untoeth,
         Mathf.SmoothStep(0f, 1f,
          Mathf.PingPong(Time.time / secondsForOneLength, 1f)
        ));
    }
}
